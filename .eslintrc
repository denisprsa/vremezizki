{
    "parser": "babel-eslint",
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "rules": {
        "indent": ["error", 4],
        "quotes": [2, "single", { "avoidEscape": true }]
    },
    "env": {
        "browser": true,
        "node": true,
        "jest": true
    }
}